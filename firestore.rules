rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function isAdmin() {
      return isAuthenticated() && getUserData().role == 'admin';
    }
    
    function isTeacher() {
      return isAuthenticated() && getUserData().role == 'teacher';
    }
    
    function isStudent() {
      return isAuthenticated() && getUserData().role == 'student';
    }
    
    function isParent() {
      return isAuthenticated() && getUserData().role == 'parent';
    }
    
    function ownsData(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if ownsData(userId) || isAdmin();
      allow delete: if isAdmin();
    }
    
    match /grades/{gradeId} {
      allow read: if isAuthenticated();
      allow create, update: if isTeacher() || isAdmin();
      allow delete: if isAdmin();
    }
    
    match /attendance/{attendanceId} {
      allow read: if isAuthenticated();
      allow create, update: if isTeacher() || isAdmin();
      allow delete: if isAdmin();
    }
    
    match /bulletinBoard/{postId} {
      allow read: if isAuthenticated();
      allow create: if isTeacher() || isAdmin();
      allow update, delete: if isAdmin() || 
        (resource.data.authorId == request.auth.uid);
    }
    
    match /notifications/{notificationId} {
      allow read: if isAuthenticated() && 
        resource.data.recipientId == request.auth.uid;
      allow create: if isAuthenticated();
      allow update: if ownsData(resource.data.recipientId);
      allow delete: if isAdmin();
    }
    
    match /messages/{messageId} {
      allow read: if isAuthenticated() && 
        (resource.data.senderId == request.auth.uid || 
         resource.data.recipientId == request.auth.uid);
      allow create: if isAuthenticated();
      allow update, delete: if false;
    }
    
    match /parentAccounts/{accountId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
    
    match /assignments/{assignmentId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isTeacher() || isAdmin();
    }
    
    match /submissions/{submissionId} {
      allow read: if isAuthenticated();
      allow create: if isStudent();
      allow update: if isTeacher() || isAdmin();
      allow delete: if isAdmin();
    }
    
    match /quizzes/{quizId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isTeacher() || isAdmin();
    }
    
    match /quizResults/{resultId} {
      allow read: if isAuthenticated() && 
        (resource.data.studentId == request.auth.uid || isTeacher() || isAdmin());
      allow create: if isStudent();
      allow update, delete: if isAdmin();
    }
    
    match /conferences/{conferenceId} {
      allow read: if isAuthenticated();
      allow create, update: if isTeacher() || isAdmin() || isParent();
      allow delete: if isAdmin();
    }
    
    match /planner/{plannerId} {
      allow read, write: if isAuthenticated() && 
        resource.data.userId == request.auth.uid;
    }
  }
}